@model  List<Roller.Models.Movie>



@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@*@{
        var className = Model.Customers.Count > 1 ? "Popular" : null;

    }*@

<h1> @ViewBag.Title</h1>


@if (Model.Count == 0)
{
    <text>We do not have any movies yet. </text>

}
else
{


    <table class="table table-light">
        <thead class="thead-dark">
            <tr>
                <th scope="col"> @ViewBag.Title</th>

            </tr>
        </thead>

        <tbody class="thead-dark">

            @foreach (var customer in Model)
            {
                <tr>
                    <th scope="row">

                        @Html.ActionLink(customer.Name, "Details", "Movie")

                    </th>


                </tr>

            }



        </tbody>

    </table>


}
